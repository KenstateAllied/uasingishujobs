{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/**",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "client/assets/$1"
    },
    {
      "src": "/static/(.*)",
      "dest": "client/static/$1"
    },
    {
      "src": "/(.*)\\..*$",
      "dest": "client/$1"
    },
    {
      "src": "/.*",
      "dest": "client/index.html"
    }
  ]
}